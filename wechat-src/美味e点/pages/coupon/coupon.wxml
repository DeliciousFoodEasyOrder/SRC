<view class="balance-money">
    <view class="balance">
        <text>余额: {{balance}}</text>
    </view>
    <view class="money-to-pay">
        <text>结算: {{moneyToPay}}</text>
    </view>
</view>

<view class='coupon-container' wx:for="{{couponList}}">
    <checkbox-group bindchange="checkboxChange">
        <label>
            <checkbox checked="{{item.checked}}">
                <image class="coupon-image" src="{{item.imgUri}}"></image>
            </checkbox>
        </label>
    </checkbox-group>
</view>

<button class="confirm-button payRequestCoupon?buttonDispaly:buttonNotDisplay" bindtap='confirmButtonTap'>
    <text>确认付款</text>
</button>