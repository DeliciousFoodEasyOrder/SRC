<view class="desk-money">
    <view class="desk-id">
        <text>桌号: {{deskID}}</text>
    </view>
    <view class="money-to-pay">
        <text>结算: {{moneyToPay}}</text>
    </view>
</view>

<view class="recipe-detail-container">
    <view class="recipe-title">
        <text>您的菜谱</text>
    </view>
    <view class="recipe-item" wx:for="{{recipeDetail}}">
        <view class="food-icon">
            <image src="{{recipeFoodImgUri[index]}}"></image>
        </view>
        <view class="recipe-detail">
            <view>
                <text>{{item}}</text>
            </view>
            <view>
                <text>￥{{recipeMoney[index]}}</text>
            </view>
        </view>
        <view class="food-count">
            <text>x{{recipeCount[index]}}</text>
        </view>
        <view class="minus-icon">
            <image src="../../image/minus.png"></image>
        </view>
    </view>
</view>

<button class="confirm-button">
    <text>确认付款</text>
</button>